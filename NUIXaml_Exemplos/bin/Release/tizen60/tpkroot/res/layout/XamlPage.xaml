                         ResourceUrl="*Resource*/NUIXaml_Exemplos.png" 
                         Position2D="47,52" Size2D="340,340" 
            />
        </PushButton>

    </b:View>
    <b:View Name="segundo" Size2D="440,450" Position2D="20,650" 
            BackgroundColor="#fff"  >
        <FlexContainer 
                       RowSpan="3"
                       
                       JustifyContent="JustifyCenter" 
                       AlignItems="AlignCenter"  
                       BackgroundColor="Red"  
                       Size2D="300,220" 
         >
            <TextEditor  Size2D="95,45" BackgroundColor="White" />
            <TextEditor  Size2D="95,45" BackgroundColor="White"></TextEditor>
            <TextEditor  Size2D="95,45" BackgroundColor="White"></TextEditor>
        </FlexContainer>
        
       
    </b:View>
    <View Name="outers" Size2D="600,440" Position2D="500,650" BackgroundColor="Cyan" >
        <FlexContainer ColumnSpan="3" 
                       JustifyContent="JustifyCenter" 
                       AlignItems="AlignCenter"  
                       BackgroundColor="Red"  
                       Size2D="300,220" 
         >
            <TextEditor  Size2D="95,45" BackgroundColor="#AA51"  Flex="2" ColumnSpan="2" ></TextEditor>
            <TextEditor  Size2D="95,45" BackgroundColor="White" ColumnSpan="1" ></TextEditor>
            <TextEditor  Size2D="95,45" BackgroundColor="White" ColumnSpan="3"  ></TextEditor>
        </FlexContainer>
    </View>
</b:View>
    

